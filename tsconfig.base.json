{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@keyflow/db/*": ["packages/db/src/*"],
      "@keyflow/api/*": ["packages/api/src/*"],
      "@keyflow/ui/*": ["packages/ui/src/*"]
    }
  }
}
